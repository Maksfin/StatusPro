footer.footer
	.container
		.footer__top
			.footer__left
				.footer-logo
					a(href="#" title="На главную").logo
						img(src="img/logo/logo_footer.png" alt="Lafoy").logo__img
						span.logo__text Мебель&Свет
				nav.footer-nav
					+ul('nav-left', nav_left, -1, true)
					+ul('nav-right', nav_right, -1, true)
